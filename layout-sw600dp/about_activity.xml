<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nature_background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleX="1.12"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/new_nature_background" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="637dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:autoSizeTextType="uniform"
        android:text="Hello, welcome to my application my name is Gil Cohen,thank you for installing my application, if u have any question or u find any problem or a bug with my application i would really appreciate it if u will send me a message"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toBottomOf="@+id/nature_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nature_background"
        app:layout_constraintVertical_bias="0.159" />


    <ImageView
        android:id="@+id/back_about_button"
        android:layout_width="148dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/about_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/version_text"
        android:layout_width="269dp"
        android:layout_height="69dp"
        android:text="@string/version"
        android:textColor="#3F51B5"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toBottomOf="@+id/nature_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmail_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/facebook_image"
        android:layout_width="535dp"
        android:layout_height="93dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_text"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/instagram_image"
        android:layout_width="535dp"
        android:layout_height="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_image"
        app:srcCompat="@drawable/insta" />

    <ImageView
        android:id="@+id/gmail_image"
        android:layout_width="535dp"
        android:layout_height="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagram_image"
        app:srcCompat="@drawable/gmail" />

    <TextView
        android:id="@+id/more_apps"
        android:layout_width="238dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:autoSizeTextType="uniform"
        android:text="More Apps:"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version_text" />


    <ImageView
        android:id="@+id/tasklist"
        android:layout_width="73dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_apps"
        app:srcCompat="@drawable/tasklist_icon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="965dp" />


</androidx.constraintlayout.widget.ConstraintLayout>